{# src/OC/UserBundle/Resources/views/Security/login.html.twig #}

{% extends "layout_anonymous.html.twig" %}

{% block stylesheets %}
<style>
body{
  background-color:#2c5154e6;
}
</style>
{% endblock %}

{% block body %}

  <div style="margin:auto; margin-top: 50vh; transform: translateY(-50%); width:300px;">

      {# S'il y a une erreur, on l'affiche dans un joli cadre #}
      {% if error %}
        <div class="alert alert-danger">{{ error }}</div>
      {% endif %}

      <div class="panel panel-green">

        <div class="panel-heading">
          Se connecter
          <span style="float:right; cursor:pointer;" title="Se connecter avec un mot de passe." onClick="$('#field_password').slideDown();">
            <i class="fa fa-key "></i>
          </span>
        </div>
        <div class="panel-body">
          

          {# Le formulaire, avec URL de soumission vers la route « login_check » comme on l'a vu #}
          <form action="{{ path('login_verify') }}" method="post">
            <div class="form-group">
              <label for="username">Nom d'utilisateur :</label>
              <input type="text" id="username" name="_username" class="form-control" value="{{ last_username }}" />
            </div>
            <div class="form-group" id="field_password" style="{% if not show_password %}display:none;{% endif %}">
              <label for="password">Mot de passe :</label>
              <input type="password" id="password" name="_password" class="form-control" value=""/>
            </div>
          <button type="submit" class="btn btn-success btn-lg btn-block">Connexion</button>
          </form>
        </div>

        

      </div>
  </div>

{% endblock %}
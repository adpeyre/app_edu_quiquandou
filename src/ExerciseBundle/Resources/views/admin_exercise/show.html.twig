{% extends 'base.html.twig' %}

{% block body %}
    <h1>Exercise</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ exercise.id }}</td>
            </tr>
            <tr>
                <th>Text</th>
                <td>{{ exercise.text }}</td>
            </tr>
            <tr>
                <th>Level</th>
                <td>{{ exercise.level }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_exercise_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_exercise_edit', { 'id': exercise.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}

<div class="row">
<div class="col-lg-12">


                
    <table class="table table-bordered table-hover table-striped" id="dataTables-stories" data-order='[[ 1, "asc" ]]' data-page-length='25'>
        <thead>
            <tr>
                <th style="max-width:20px;">#</th>
                <th style="min-width:150px;">Titre de l'histoire</th>
                <th>Texte de l'histoire</th>
                <th style="width:70px;">Niveau</th>
                <th style="max-width:150px;">Actions</th>
            </tr>
        </thead>
        <tbody>

            {% for exercise in exercises %}


                <tr>
                    <td>{{ exercise.id }}</td>
                    <td>{{ exercise.title }}</td>
                    <td>{{ exercise.text | truncate(120, true, '[...]') }}</td>
                    <td>{{ exercise.getLevelName() }}</td>
                    <td>       
                        <a  href="{{ path('admin_exercise_edit', { 'id': exercise.id }) }}" class="btn btn-primary btn-xs "><i class="fa fa-edit"></i> Modifier</a>
                             
                        <a href="{{ path('admin_exercise_delete', { 'id': exercise.id }) }}" onClick="if(!confirm('Etes-vous certain de vouloir supprimer cet exercice ?')) return false;" class="btn btn-danger btn-xs col- lg-6"><i class="fa fa-trash-o"></i> Supprimer</a>
                            
                    </td>
                </tr>

            {% endfor %}

        </tbody>
    </table>
                
                   

</div>

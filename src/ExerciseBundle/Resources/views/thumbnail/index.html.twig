{% extends 'layout_admin.html.twig' %}

{% block content_title %}
    Liste des vignettes
{% endblock %}

{% block content %}




   
    

<div class="container row">
    <div class="well col-md-4">
        <a href="{{ path('admin_thumbnail_new') }}">Ajouter une nouvelle vignette</a>
    </div>
</div>

    {% for type in 1..3 %}
        <h2 >{{ types[type] |capitalize }}</h2>
        <div class="row">
        {% for thumbnail in thumbnails if thumbnail.type==type %}

           
            
                

            <div class="col-lg-2 " >
                {% include 'ExerciseBundle:thumbnail:panel.html.twig' with {
                    'title': thumbnail.name,
                    'image':asset(thumbnail.getImageView()),
                    'footer':'<a href="'~path('admin_thumbnail_edit',{id:thumbnail.id})~'">Modifier</a>'
                    } only %}
                
            </div>       
                            
        {% endfor %}
        </div>
    {% endfor %}

   {#<div><a href="{{ path('admin_thumbnail_delete', { 'id': thumbnail.id }) }}">Supprimer</a></div>#}
{% endblock %}

{% extends 'layout_admin.html.twig' %}

{% block content %}



{% if not classroom is empty %}
    <h1>Classe {{classroom.name}} ({{classroom.year}})</h1>
{% else %}
    <h1>Liste des personnes</h1>
{% endif %}
    
    
   
    <div class="row table-responsive_">
        <table class="table table-bordered table-hover table-striped" id="dataTables-users" data-order='[[ 1, "asc" ]]' data-page-length='25'>
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nom d'utilisateur</th>
                    <th>Pr√©nom</th>
                    <th>Nom</th>
                    <th>Date de naissance</th>
                    <th>Email</th>                
                    <th>Statut</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td><a href="{{ path('user_show', { 'id': user.id }) }}">{{ user.id }}</a></td>
                    <td>{{ user.username }}</td>
                    <td>{{ user.firstname }}</td>
                    <td>{{ user.lastname }}</td>
                    <td>{% if user.birthDate %}{{ user.birthDate|date('Y-m-d') }}{% endif %}</td>
                    <td>{{ user.email }}</td>                
                    <td>{% if user.role %}{{ user.getRoleName() }}{% endif %}</td>
                    <td>                    
                        <a href="{{ path('user_show', { 'id': user.id }) }}">show</a> - <a href="{{ path('user_edit', { 'id': user.id }) }}">edit</a>         
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    </div>

    <ul>
        <li>
            <a href="{{ path('user_new') }}">Create a new user</a>
        </li>
    </ul>
{% endblock %}



{% extends 'layout_admin.html.twig' %}


{% block content_title %}
    Modification d'un utilisateur   
{% endblock %}



{% block content %}
    

    <h3>Informations générales</h3>

    {{ form_start(edit_general_form) }}
        {{ form_widget(edit_general_form) }}       
    {{ form_end(edit_general_form) }}

    <h3>Classe de l'utilisateur</h3>
    {{ form_start(edit_class_form) }}
        {{ form_widget(edit_class_form) }}       
    {{ form_end(edit_class_form) }}


    <h3>Protéger l'accès</h3>
    {{ form_start(password_form) }}
        {{ form_widget(password_form) }}
        
    {{ form_end(password_form) }}

    <hr>
    <hr>

     

    <h3>Supprimer l'utilisateur</h3>
    Pour supprimer l'utilisateur, <a onClick="$('#delete_form').slideDown(); return false;" href="#">cliquez ici</a>.<br />

    <div id="delete_form" style="display:none;">
        {{ form_start(delete_form) }}
            <input type="submit" value="Supprimer définitivement" class="btn btn-danger" onClick="if(!confirm('Toutes les données seront perdues.')) return false;">
        {{ form_end(delete_form) }}
    </div>
{% endblock %}

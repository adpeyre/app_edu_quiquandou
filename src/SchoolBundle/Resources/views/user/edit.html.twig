{% extends 'layout_admin.html.twig' %}

{% block content %}
    <h1>Modification d'un utilisateur</h1>

    <h3>Informations générales</h3>

    {{ form_start(edit_general_form) }}
        {{ form_widget(edit_general_form) }}
        <input type="submit" value="Edit" />
    {{ form_end(edit_general_form) }}

    <h3>Classe de l'utilisateur</h3>
    {{ form_start(edit_class_form) }}
        {{ form_widget(edit_class_form) }}
        <input type="submit" value="Edit" />
    {{ form_end(edit_class_form) }}

    <ul>
        <li>
            <a href="{{ path('user_index') }}">Retourner à la liste des utilisateurs</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}

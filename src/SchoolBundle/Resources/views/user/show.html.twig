{% extends 'layout_admin.html.twig' %}

{% block content %}
    <h1>{{ user.firstname }} {{ user.lastname }}</h1>


<style>
    .andtd {
        width: 50%; 
        padding-left: 10px;
        font-weight: bold;
    }
</style>
<div class="row">
    <div class="col-lg-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-money fa-fw"></i> Informations générales</h3>
            </div>
            <div class="panel_body">
                <table>
                    <tbody>       
                        <tr>        
                            <td class="andtd">Login</td>
                            <td>{{ user.username }}</td>
                        </tr>                
                        <tr>
                            <td class="andtd">Date de naissance</td>
                            <td>{% if user.birthDate %}{{ user.birthDate|date('Y-m-d') }}{% endif %}</td>
                        </tr>
                        <tr>
                            <td class="andtd">Email</td>
                            <td>{% if user.email is empty %} / {% else %} {{ user.email }} {% endif %}</td>
                        </tr>
                        <tr>
                            <td class="andtd">Password</td>
                            <td>{% if user.password is empty %} Pas de mot de passe {% else %} Mot de passe défini {% endif %}</td>
                        </tr>
                        <tr>
                            <td class="andtd">Roles</td>
                            <td>{% if user.roles %}{{ user.roles|join(', ') }}{% endif %}</td>
                        </tr>
                    </tbody>
                </table>
            </div>

        </div>
    </div>
    </div>

    <ul>
        <li>
            <a href="{{ path('user_index') }}">Retourner à la liste des utilisateurs</a>
        </li>
        <li>
            <a href="{{ path('user_edit', { 'id': user.id }) }}">Modifier cet utilisateur</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Supprimer cet utilisateur">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}

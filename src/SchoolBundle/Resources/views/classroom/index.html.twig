{% extends 'layout_admin.html.twig' %}

{% block content %}
    <h1>Classrooms list</h1>


<div class="table-responsive">

    <table class="table table-bordered table-hover table-striped" id="dataTables-users">
        <thead>
            <tr>
                <th>Name</th>
                <th>Year</th>
                <th>Actions</th>                
            </tr>
        </thead>
        <tbody>
        {% for classroom in classrooms %}
            <tr>
                <td>{{ classroom.name }}</td>
                <td>{{ classroom.year }}</td>
                <td>
                    <ul>
                            <a href="{{ path('user_class', { 'class_id': classroom.id }) }}">Show</a> - <a href="{{ path('admin_classroom_edit', { 'id': classroom.id }) }}">Edit</a>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    </div>


            <a href="{{ path('admin_classroom_new') }}">Create a new classroom</a>
{% endblock %}
